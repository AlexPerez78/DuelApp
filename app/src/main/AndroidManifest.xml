<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alexperez.duelapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MyAccount"
            android:label="@string/account_name"
            android:theme="@style/NoBarTheme" />
        <activity
            android:name=".BanList"
            android:label="@string/banlist_name"
            android:screenOrientation="portrait"
            android:theme="@style/NoBarTheme" />
        <activity
            android:name=".DiceRoll"
            android:theme="@style/AppTheme.PopUp" />
        <activity android:name=".FlipCoin"
            android:theme="@style/AppTheme.PopUp"></activity>
    </application>

</manifest>